<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            id="verifyFilter.commands.category"
            name="CASE TA6 Commands">
      </category>
      <command
            categoryId="verifyFilter.commands.category"
            id="verifyFilter.commands.verifyCommand"
            name="Run HOL Proof of Filter">
      </command>
   </extension>

   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.collins.atc.splat.plugin.VerifyHandler"
            commandId="verifyFilter.commands.verifyCommand">
         <enabledWhen>
            <reference
                  definitionId="org.osate.xtext.aadl2.Aadl2.Editor.opened">
            </reference>
         </enabledWhen>
      </handler>
      <handler
            class="com.collins.atc.splat.plugin.VerifyHandler"
            commandId="filter_checker.commads.verify">
      </handler>      
   </extension>

   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="verifyFilter.toolbar">
            <command
                  commandId="verifyFilter.commands.verifyCommand"
                  icon="icons/gears.png"
                  label="Run Verify Command">
            </command>           
         </toolbar>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:com.collins.atc.darpacase.menus.outline.resiliency.staircase.proofs?after=additions">
         <command
               commandId="filter_checker.commads.verify"
               label="SPLAT"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:com.collins.atc.darpacase.menus.editor.resiliency.staircase.proofs?after=additions">
         <command
               commandId="filter_checker.commads.verify"
               label="SPLAT"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:com.collins.atc.darpacase.menus.menubar.resiliency.staircase.proofs?after=additions">
         <command
               commandId="filter_checker.commads.verify"
               label="SPLAT"
               style="push">
         </command>
      </menuContribution>
   </extension>

</plugin>
